{
    "version": 1,
    "disable_existing_loggers": false,
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "WARNING",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
        },
        "udp": {
            "class": "src.services.udp_logger.UDPLogger",
            "level": "WARNING",
            "formatter": "simple",
            "ip": "10.0.0.1",
            "port": 5013
        }
    },
    "loggers": {
        "main": {
            "level": "INFO",
            "handlers": ["udp"],
            "propagate": false
        },
        "device_stats_sender": {
            "level": "WARNING",
            "handlers": ["udp"],
            "propagate": false
        },
        "services.can_manager": {
            "level": "WARNING",
            "handlers": ["udp"],
            "propagate": false
        },
        "services.network_manager": {
            "level": "WARNING",
            "handlers": ["console", "udp"],
            "propagate": false
        }
    },
    "formatters": {
        "detailed": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
        },
        "simple": {
            "format": "%(asctime)s - %(module)s - %(levelname)s - %(message)s"
        }
    }
}
